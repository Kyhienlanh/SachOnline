@using PagedList.Mvc
@model PagedList.PagedList<SachOnline.Models.KHACHHANG>

@{
    ViewBag.Title = "Customer List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .pager{
        text-align:center;

    }
</style>

<h2>DANH SÁCH KHÁCH HÀNG</h2>

<p>
    @Html.ActionLink("Thêm mới khách hàng", "Create")
</p>

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            
            <th>Họ tên</th>
            <th>Tài khoản</th>
            <th>Mật khẩu</th>
            <th>EMail</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Ngày sinh</th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                
                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.TaiKhoan)</td>
                <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaKH }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaKH }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaKH }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>

<div class="pager">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
