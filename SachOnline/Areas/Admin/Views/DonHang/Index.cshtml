@using PagedList.Mvc
@model PagedList.PagedList<SachOnline.Models.DONDATHANG>

@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .pager{
        text-align:center;
    }
</style>
<h2>DANH SÁCH ĐƠN HÀNG</h2>

<p>
    @Html.ActionLink("Thêm mới đơn hàng", "Create")
</p>

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Đã Thanh Toán</th>
            <th>Tình Trạng Giao Hàng</th>
            <th>Ngày Đặt</th>
            <th>Ngày Giao</th>
            <th>Mã Khách Hàng</th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MaDonHang)</td>
                <td>@Html.DisplayFor(modelItem => item.DaThanhToan)</td>
                <td>@Html.DisplayFor(modelItem => item.TinhTrangGiaoHang)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayDat)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayGiao)</td>
                <td>@Html.DisplayFor(modelItem => item.MaKH)</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDonHang }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDonHang }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaDonHang }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>

<div class="pager">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
